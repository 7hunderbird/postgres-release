<%
port = p("stanza.postgres.port")
if_link("database") do |data|
  port = data.p("databases.port")
end

 %>
[global]
repo1-path=/var/vcap/store/pgbackrest
log-path=/var/vcap/sys/log/pgbackrest
log-level-console=info
repo1-retention-full=1
repo1-retention-diff=5

<% if_p("pgbackrest.global_options_section") do |pgb_config| %>
# Additional configuration
<% pgb_config.each do |key, value| %>
<%= key %>=<%= value %>
<% end %>
<% end %>


[global:archive-push]
compress-level=3

[<%= p('stanza.name') %>]
pg1-path=/var/vcap/store/postgres/postgres-11.2
pg1-port=<%= port %>
pg1-socket-path=/tmp
recovery-option=recovery_target_action=promote
